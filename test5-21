int main()
{
	int i = 0;
	int group = 1;
	for (i = 1; i <= 3; i++)
	{
		float aver = 0;
		float sum = 0;
		float pay = 0;
		int j = -1;
		printf("------------\n");
		while (pay != -1)
		{
			j++;
			sum += pay;
			scanf("%f", &pay);
		}
		aver = sum / j;
		printf("第%d组数据:\n", group);
		group++;
		printf("%.2f\n",aver);
		
	}
	return 0;
}
